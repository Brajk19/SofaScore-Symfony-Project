{% extends "base.html.twig" %}

{% block title %}
    Pick competition
{% endblock %}

{% block body %}
    <br>

    {% include "saruman.html.twig" with {entity: season} %}

    <br><br>

    {% include "standingsTypeBar.html.twig" %}

    <br><br>

    <div class="ptable">
        <h1 class="headin">Standings</h1>

        <table>
            <tr class="col">
                <th>#</th>
                <th>Team</th>
                <th>Played</th>
                <th>Wins</th>
                <th>Losses</th>
                <th>For</th>
                <th>Against</th>
                <th>Win percentage</th>
            </tr>


            {% set i = 1 %}
            {% for row in rows %}

                {% if(i <= 4) %}
                    <tr class="wpos">
                {% else %}
                    <tr class="pos">
                {% endif %}

                <td>{{ i }}</td>
                <td>{{ row.competitor.name }}</td>
                <td>{{ row.matches}}</td>
                <td>{{ row.wins }}</td>
                <td>{{ row.losses }}</td>
                <td>{{ row.scoresFor }}</td>
                <td>{{ row.scoresAgainst }}</td>
                <td>{{ row.winPercentage | round(2, 'ceil')}}</td>

                </tr>

                {% set i = i + 1 %}
            {% endfor %}
        </table>
    </div>

{% endblock %}